    <!-- Get Started -->
    <section id="get-started" class="get-started">
        <div class="container">
            <h2>Get Started in Minutes</h2>
            <div class="tabs">
                <button class="tab active" data-tab="docker">Docker</button>
                <button class="tab" data-tab="kubernetes">Kubernetes</button>
                <button class="tab" data-tab="helm">Helm</button>
            </div>
            <div class="tab-content active" id="docker">
                <pre><code># Docker Compose
version: '3.8'
services:
  config-hub:
    image: ghcr.io/gitdigital-products/config-hub:latest
    ports:
      - "8080:8080"
    environment:
      - DATABASE_URL=postgresql://user:pass@db:5432/config_hub
      - REDIS_URL=redis://redis:6379</code></pre>
            </div>
            <div class="tab-content" id="kubernetes">
                <pre><code># Kubernetes Manifest
apiVersion: apps/v1
kind: Deployment
metadata:
  name: config-hub
spec:
  replicas: 3
  selector:
    matchLabels:
      app: config-hub
  template:
    metadata:
      labels:
        app: config-hub</code></pre>
            </div>
            <div class="tab-content" id="helm">
                <pre><code># Helm Installation
helm repo add gitdigital https://charts.gitdigital.com
helm install config-hub gitdigital/config-hub \
  --set database.password=secret \
  --set redis.password=secret</code></pre>
            </div>
        </div>
    </section>

    <script src="script.js"></script>
</body>
</html>
```